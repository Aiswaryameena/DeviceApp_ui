<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="59dp"
    android:transitionGroup="true">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <View
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="2dp"
            android:layout_marginTop="320dp"
            android:background="#ecebe9"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="bottom"
            android:layout_marginTop="321dp"
            android:layout_height="50dp"
            android:id="@+id/relativeLayout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:background="@color/cardview_light_background"
                android:layout_height="50dp"
                android:layout_marginRight="1dp"
                android:weightSum="1"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="05dp"
                    android:src="@drawable/followers"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/imageView4" />
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_marginLeft="40dp">
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3576"
                android:textSize="15dp"
                android:layout_weight="0.50"
                android:textColor="@android:color/black"
                android:layout_marginTop="05dp"
                android:layout_marginStart="10dp"
                android:id="@+id/textView18" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Followers"
                    android:layout_marginTop="20dp"
                    android:id="@+id/textView23"
                    android:layout_weight="0.50" />
                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:background="@color/cardview_light_background"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="05dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/next"
                    android:id="@+id/imageView3" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="158"
                        android:textSize="15dp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="05dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="0.5"
                        android:id="@+id/textView120" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Followings"
                        android:layout_marginTop="20dp"
                        android:id="@+id/textView123"
                        android:layout_weight="0.50" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:id="@+id/linearLayout">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            android:nestedScrollingEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"/>
    </LinearLayout>
<RelativeLayout
    android:id="@+id/rel_layout_2"
    android:visibility="gone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_layout"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:background="@color/cardview_light_background"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">


            <View
                android:id="@+id/activity_transition_header"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:transitionName="holder1"
                android:background="@drawable/ac"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="230dp"
                android:layout_alignParentBottom="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aiswarya Meena"
                    android:gravity="center_horizontal"
                    android:id="@+id/text1"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trainee software engineer"
                    android:gravity="center_horizontal"
                    android:id="@+id/text2"
                    android:layout_below="@id/text1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:gravity="center_horizontal"
                    android:text="whatever happens in life keep smiling and let the life go in its way dont try to change its flow"
                    android:layout_marginLeft="25dp"
                    android:layout_below="@+id/text2"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/textView19" />

            </RelativeLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:id="@+id/circleImageView"
                android:src="@drawable/baby"
                android:layout_marginBottom="90dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fab_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="185dp"
            android:layout_marginLeft="295dp"
            android:src="@drawable/khjg"
            />

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>