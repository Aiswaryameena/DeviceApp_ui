<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <RadioButton
        android:textColor="@android:color/black"
        android:text="Weekly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton3"
        android:layout_above="@+id/radioButton4"
        android:layout_alignStart="@+id/radioButton4" />

    <RadioButton
        android:textColor="@android:color/black"
        android:text="Never"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton5"
        android:layout_marginBottom="86dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/radioButton4" />

    <RadioButton
        android:text="Monthly"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton4"
        android:layout_above="@+id/radioButton5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textColor="@android:color/black"
        android:text="Storage Location of your media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textSize="30sp"
        android:id="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:textColor="@android:color/black"
        android:text="Backup your chats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textSize="30sp"
        android:layout_above="@+id/radioButton3"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:text="No one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton2"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/textView14"
        android:layout_alignStart="@+id/radioButton3" />

    <RadioButton
        android:text="Internal storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton8"
        android:layout_below="@+id/textView12"
        android:layout_alignStart="@+id/radioButton11" />

    <RadioButton
        android:text="let system decide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton9"
        android:layout_below="@+id/radioButton8"
        android:layout_alignStart="@+id/radioButton8" />

    <RadioButton
        android:text="SD card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton11"
        android:layout_above="@+id/radioButton8"
        android:layout_alignEnd="@+id/radioButton" />

    <TextView
        android:textColor="@android:color/black"

        android:text="Privacy of your media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/textView13"
        android:layout_below="@+id/radioButton8"
        android:layout_alignEnd="@+id/radioButton9"
        android:layout_marginTop="39dp" />

    <RadioButton
        android:text="Public"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/radioButton5" />

    <RadioButton
        android:text="My Contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton10"
        android:layout_above="@+id/radioButton"
        android:layout_alignStart="@+id/radioButton2" />

    <Button
        android:text="ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/radioButton9"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button2"
        android:layout_toEndOf="@+id/textView14"
        android:id="@+id/button3" />
</RelativeLayout>